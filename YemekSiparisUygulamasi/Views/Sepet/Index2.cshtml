@model List<YemekSiparisUygulamasi.Models.Siniflar.Siparisler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_RezervasyonLayout.cshtml";
}

<h2>Sipariş Listesi</h2>
<table class="table table-hover">
    <tr>
        <th>Ad Soyad</th>
        <th>Tarih</th>
        <th>Menü</th>
        <th>Tutar</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Musteri.MusteriAd @x.Musteri.MusteriSoyad</td>
            <td>@x.Tarih</td>
            <td>@Html.DisplayFor(y => x.Menu.Ad)</td>
            <td>@Html.DisplayFor(y => x.Menu.Fiyat)</td>
        </tr>

    }

</table>
