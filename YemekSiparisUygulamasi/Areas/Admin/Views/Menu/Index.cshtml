@using YemekSiparisUygulamasi.Models.Siniflar
@model List<Menu>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>AD</th>
        <th>FİYAT</th>
        <th>DURUM</th>
        <th>GÖRSEL</th>
        <th>TÜR</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.ID</td>
            <td>@u.Ad</td>
            <td>@u.Fiyat</td>
            <td>@u.Durum</td>
            <td>
                <img src="@u.Gorsel" style="width:100px;" height="50px;" data-toggle="modal" data-target="#Modal1" />
            </td>
            <td>@u.Tur.Ad</td>
            <td><a href="/Admin/Menu/YemekSil/@u.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/Menu/YemekGetir/@u.ID" class="btn btn-warning">Güncelle</a></td>
        </tr>

    }
</table>
<a href="/Admin/Menu/YemekEkle" class="btn btn-primary">Ekle</a>
<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            </div>
            <div class="modal-body">
                    @foreach (var x in Model)
                    {
                       <h2>@x.Aciklama</h2>
                    }
                <button class="btn btn-danger" type="button" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>



