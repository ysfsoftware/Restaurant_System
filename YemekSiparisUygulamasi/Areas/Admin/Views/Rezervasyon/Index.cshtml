@using YemekSiparisUygulamasi.Models.Siniflar
@model List<Rezervasyon>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover" style="margin-top:20px;">
    <tr>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Telefon</th>
        <th>Mail</th>
        <th>Kişi Sayısı</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Ad</td>
            <td>@x.Soyad</td>
            <td>@x.TelefonNo</td>
            <td>@x.Mail</td>
            <td>@x.KisiSayisi</td>
            <td>@x.Tarih</td>
            <td>@x.Saat</td>
            <td><a href="/Admin/Rezervasyon/RezervasyonSil/@x.RezervasyonID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/Rezervasyon/RezervasyonGetir/@x.RezervasyonID" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>
<a class="btn btn-primary" href="/Admin/Rezervasyon/RezervasyonEkle">Yeni Rezervasyon Ekle</a>



