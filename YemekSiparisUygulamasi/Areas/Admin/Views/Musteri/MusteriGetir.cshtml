@model YemekSiparisUygulamasi.Models.Siniflar.Musteri
@{
    ViewBag.Title = "MusteriGetir";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Müşteri Güncelleme</h2>
<br />
@using (Html.BeginForm("MusteriGuncelle", "Musteri", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(x => x.MusteriAd)
    @Html.TextBoxFor(x => x.MusteriAd, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.MusteriAd, "", new { @style = "color:red" })
    <br />
    @Html.HiddenFor(x => x.MusteriID)
    @Html.LabelFor(x => x.MusteriSoyad)
    @Html.TextBoxFor(x => x.MusteriSoyad, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.MusteriSoyad, "", new { @style = "color:orange" })
    <br />
    @Html.LabelFor(x => x.Cinsiyet)
    @Html.TextBoxFor(x=>x.Cinsiyet, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.MusteriSehir)
    @Html.TextBoxFor(x => x.MusteriSehir, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.MusteriMail)
    @Html.TextBoxFor(x => x.MusteriMail, new { @class = "form-control" })
    <br />
</div>
    <button class="btn btn-default" style="background-color:seagreen;color:white">Güncelle</button>
}


