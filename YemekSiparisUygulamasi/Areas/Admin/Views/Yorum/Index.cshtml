@using YemekSiparisUygulamasi.Models.Siniflar
@model List<Yorum>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover" style="margin-top:20px;">
    <tr>
        <th>Yorum</th>
        <th>Sil</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Aciklama</td>
            <td><a href="/Admin/Yorum/YorumSil/@x.YorumID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/Yorum/YorumDetay/@x.YorumID" class="btn btn-dark">Detaylar</a></td>
        </tr>
    }
</table>

